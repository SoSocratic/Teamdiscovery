<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_plain"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/chc_tx_childname"
        android:layout_width="413dp"
        android:layout_height="45dp"
        android:ems="10"
        android:backgroundTint="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white"
        android:hint="Child's Name"
        android:textSize="35dp"
        android:inputType="textPersonName"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/chc_tx_educator"
        android:layout_marginRight="93dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="93dp"
        app:layout_constraintLeft_toRightOf="@+id/chc_chanme"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/chc_avatartxt"
        android:layout_width="106dp"
        android:layout_height="25dp"
        android:text="Change avatar"
        android:textColor="@android:color/white"
        android:textSize="15dp"
        android:textScaleX="fitCenter"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/chc_imgbtn_avatar"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/cc_ok"
        android:layout_width="340dp"
        android:layout_height="83dp"
        android:background="@drawable/update"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="68dp" />

    <TextView
        android:id="@+id/cc_tv_admin_name"
        android:layout_width="536dp"
        android:layout_height="53dp"
        android:text="Dynamic child's name settings"
        android:textColor="@android:color/white"
        android:textSize="45dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintHorizontal_bias="0.11"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <ImageButton
        android:id="@+id/cc_info"
        android:layout_width="55dp"
        android:layout_height="52dp"
        app:srcCompat="@android:drawable/ic_menu_info_details"
        android:background="@drawable/about"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="38dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="38dp" />


    <ImageButton
        android:id="@+id/cc_sett"
        android:layout_width="54dp"
        android:layout_height="59dp"
        android:adjustViewBounds="false"
        android:background="@drawable/settings"
        android:layout_marginRight="39dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="39dp" />


    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline18"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="20dp"
        tools:layout_editor_absoluteX="0dp" />

    <ImageButton
        android:id="@+id/chc_imgbtn_avatar"
        android:layout_width="91dp"
        android:layout_height="111dp"
        app:srcCompat="@drawable/boy"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:background="AAD8D0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="83dp" />

    <TextView
        android:id="@+id/chc_tv_chid"
        android:layout_width="125dp"
        android:layout_height="45dp"
        android:text="ChildID:"
        android:textSize="35dp"
        android:textColor="@android:color/white"
        app:layout_constraintRight_toRightOf="@+id/chc_parent_educator"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/chc_tx_chid" />

    <TextView
        android:id="@+id/chc_parent_educator"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:text="Parent/Educator:"
        android:textSize="35dp"
        android:textColor="@android:color/white"
        app:layout_constraintRight_toRightOf="@+id/chc_chanme"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toBottomOf="@+id/chc_tv_chid"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/chc_chanme"
        android:layout_width="193dp"
        android:layout_height="45dp"
        android:text="Child Name:"
        android:textSize="35dp"
        android:textColor="@android:color/white"
        app:layout_constraintRight_toRightOf="@+id/chc_rewards"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/chc_tx_childname" />

    <TextView
        android:id="@+id/chc_rewards"
        android:layout_width="149dp"
        android:layout_height="45dp"
        android:text="Rewards:"
        android:textSize="35dp"
        android:textColor="@android:color/white"
        app:layout_constraintRight_toRightOf="@+id/chc_report"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.989"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/chc_tx_reward" />

    <TextView
        android:id="@+id/chc_report"
        android:layout_width="285dp"
        android:layout_height="45dp"
        android:text="Progress Reports:"
        android:textSize="35dp"
        android:textColor="@android:color/white"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/chc_rewards"
        android:layout_marginLeft="59dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="59dp" />

    <TextView
        android:id="@+id/chc_tx_educator"
        android:layout_width="413dp"
        android:layout_height="41dp"
        android:ems="10"
        android:textSize="35dp"
        android:backgroundTint="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white"
        android:inputType="textPersonName"
        android:hint="Parent/Educator Name"
        android:layout_marginRight="93dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="93dp"
        app:layout_constraintBottom_toBottomOf="@+id/chc_parent_educator"
        app:layout_constraintLeft_toRightOf="@+id/chc_parent_educator"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/chc_tx_reward"
        android:layout_width="413dp"
        android:layout_height="45dp"
        android:backgroundTint="@android:color/white"
        android:ems="10"
        android:hint=""
        android:text="Update Rewards"
        android:textSize="35dp"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/chc_tx_childname"
        android:layout_marginRight="93dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="93dp"
        android:layout_marginTop="17dp"
        app:layout_constraintLeft_toRightOf="@+id/chc_rewards"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/chc_tx_report"
        android:layout_width="413dp"
        android:layout_height="45dp"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/white"
        android:ems="10"
        android:hint=""
        android:text="View Progress Report"
        android:textSize="35dp"
        android:inputType="textPersonName"
        android:layout_marginRight="93dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="93dp"
        app:layout_constraintBottom_toBottomOf="@+id/chc_report"
        app:layout_constraintLeft_toRightOf="@+id/chc_report"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="8dp" />


    <TextView
        android:id="@+id/chc_tx_chid"
        android:layout_width="389dp"
        android:layout_height="45dp"
        android:ems="10"
        android:textSize="35dp"
        android:text="Child's ID"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/white"
        android:hint=""
        android:inputType="textPersonName"
        android:layout_marginRight="93dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="237dp"
        android:layout_marginEnd="93dp"
        app:layout_constraintLeft_toRightOf="@+id/chc_tv_chid"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="8dp" />

</android.support.constraint.ConstraintLayout>