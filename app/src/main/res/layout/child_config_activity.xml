<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_plain"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/chc_tx_childname"
        android:layout_width="550dp"
        android:layout_height="60dp"
        android:textSize="30dp"
        android:backgroundTint="@color/colorAccent"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white"
        android:ems="10"
        android:hint="Child's Name"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/chc_tx_educator"
        app:layout_constraintRight_toRightOf="@+id/chc_tx_reward"
        app:layout_constraintLeft_toLeftOf="@+id/chc_tx_reward" />

    <TextView
        android:id="@+id/chc_avatartxt"
        android:layout_width="106dp"
        android:layout_height="25dp"
        android:text="Change avatar"
        android:textColor="@android:color/white"
        android:textSize="15dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/chc_imgbtn_avatar"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <ImageButton
        android:id="@+id/cc_ok"
        android:layout_width="340dp"
        android:layout_height="83dp"
        android:background="@android:color/transparent"
        android:padding="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="68dp" />

    <TextView
        android:id="@+id/cc_tv_admin_name"
        android:layout_width="536dp"
        android:layout_height="53dp"
        android:text="Dynamic child's name settings"
        android:textColor="@android:color/white"
        android:textSize="45dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintHorizontal_bias="0.11"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <ImageButton
        android:id="@+id/cc_info"
        android:layout_width="55dp"
        android:layout_height="52dp"
        android:background="@android:color/transparent"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="38dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="38dp" />


    <ImageButton
        android:id="@+id/cc_sett"
        android:layout_width="54dp"
        android:layout_height="59dp"
        android:adjustViewBounds="false"
        android:background="@android:color/transparent"
        android:padding="0dp"
        android:layout_marginRight="39dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="39dp" />


    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline18"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="20dp"
        tools:layout_editor_absoluteX="0dp" />

    <ImageButton
        android:id="@+id/chc_imgbtn_avatar"
        android:layout_width="91dp"
        android:layout_height="111dp"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="83dp" />

    <TextView
        android:id="@+id/chc_tx_educator"
        android:layout_width="550dp"
        android:layout_height="60dp"
        android:textSize="30dp"
        android:backgroundTint="@color/colorAccent"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Parent/Educator Name"
        app:layout_constraintRight_toRightOf="@+id/chc_tx_childname"
        app:layout_constraintTop_toBottomOf="@+id/chc_tx_chid"
        app:layout_constraintLeft_toLeftOf="@+id/chc_tx_childname"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/chc_tx_reward"
        android:layout_width="550dp"
        android:layout_height="60dp"
        android:textSize="30dp"
        android:backgroundTint="@color/colorAccent"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white"  android:ems="10"
        android:hint=""
        android:text="Update Rewards"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/chc_tx_childname"
        app:layout_constraintRight_toRightOf="@+id/chc_tx_report"
        app:layout_constraintLeft_toLeftOf="@+id/chc_tx_report"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/chc_tx_report"
        android:layout_width="550dp"
        android:layout_height="60dp"
        android:textSize="30dp"
        android:backgroundTint="@color/colorAccent"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white" android:ems="10"
        android:hint=""
        android:text="View Progress Report"
        android:inputType="textPersonName"
        android:layout_marginRight="93dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="93dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.613"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/chc_tx_reward"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/chc_tx_chid"
        android:layout_width="550dp"
        android:layout_height="60dp"
        android:textSize="30dp"
        android:backgroundTint="@color/colorAccent"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white"
        android:ems="10"
        android:text="Child's ID"
        android:hint=""
        android:inputType="textPersonName"
        app:layout_constraintRight_toRightOf="@+id/chc_tx_educator"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="220dp"
        app:layout_constraintLeft_toLeftOf="@+id/chc_tx_educator"
        app:layout_constraintHorizontal_bias="0.0" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@android:color/transparent"
        android:padding="0dp"
        android:layout_marginTop="220dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/imageView12"
        app:layout_constraintHorizontal_bias="1.0" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@android:color/transparent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/chc_tx_report"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="192dp"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@android:color/transparent"
        android:padding="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView11"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginBottom="33dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView11" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@android:color/transparent"
        android:padding="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView14"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView14"
        android:layout_marginLeft="0dp" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@android:color/transparent"
        android:padding="0dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView10"
        app:layout_constraintLeft_toLeftOf="@+id/imageView13"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView13"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginLeft="0dp" />

</android.support.constraint.ConstraintLayout>