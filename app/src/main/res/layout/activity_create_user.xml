<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <EditText
        android:id="@+id/ac_tx_email"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint=""
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/white"
        app:layout_constraintHorizontal_bias="0.035"
        app:layout_constraintLeft_toLeftOf="@+id/ac_tx_uname"
        app:layout_constraintBottom_toBottomOf="@+id/ac_tv_email" />

    <EditText
        android:id="@+id/ac_tx_repword"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:hint=""
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/white"
        android:textColorHint="@android:color/white"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="@+id/ac_tv_repword"
        app:layout_constraintLeft_toLeftOf="@+id/ac_tx_pword"
        android:layout_marginLeft="-3dp"
        android:layout_marginBottom="-5dp" />

    <EditText
        android:id="@+id/ac_tx_pword"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:backgroundTint="@android:color/white"
        android:textColorHint="@android:color/white"
        android:ems="10"
        android:hint=""
        android:textColor="@android:color/white"
        android:inputType="textPassword"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintLeft_toLeftOf="@+id/ac_tx_email"
        app:layout_constraintBottom_toBottomOf="@+id/ac_tv_pword" />

    <TextView
        android:id="@+id/ac_tv_pword"
        android:layout_width="167dp"
        android:layout_height="45dp"
        android:text="Password:"
        android:textColor="@android:color/white"
        android:textSize="35dp"
        app:layout_constraintTop_toBottomOf="@+id/ac_tv_email"
        app:layout_constraintBottom_toTopOf="@+id/ac_tv_repword"
        app:layout_constraintRight_toRightOf="@+id/ac_tv_email" />

    <Button
        android:id="@+id/cu_create"
        android:layout_width="340dp"
        android:layout_height="83dp"
        android:background="@drawable/cu_create"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="96dp"
        app:layout_constraintTop_toTopOf="@+id/guideline17"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.938"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/cu_cancel"
        android:layout_width="340dp"
        android:layout_height="83dp"
        android:background="@drawable/cu_cancel"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.793"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.802"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <ImageButton
        android:id="@+id/ac_info"
        android:layout_width="55dp"
        android:layout_height="52dp"
        app:srcCompat="@android:drawable/ic_menu_info_details"
        android:background="@drawable/about"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="38dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="38dp" />


    <ImageButton
        android:id="@+id/ac_sett"
        android:layout_width="54dp"
        android:layout_height="59dp"
        android:adjustViewBounds="false"
        android:background="@drawable/settings"
        android:layout_marginRight="39dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="39dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline10"
        app:layout_constraintGuide_begin="245dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="245dp"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline11"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="20dp" />

    <TextView
        android:id="@+id/ac_tv_repword"
        android:layout_width="305dp"
        android:layout_height="45dp"
        android:text="Re-enter Password:"
        android:textColor="@android:color/white"
        android:textSize="35dp"
        app:layout_constraintBottom_toTopOf="@+id/cu_create"
        app:layout_constraintTop_toBottomOf="@+id/ac_tv_pword"
        app:layout_constraintRight_toRightOf="@+id/ac_tv_pword" />

    <TextView
        android:id="@+id/ac_tv_email"
        android:layout_width="99dp"
        android:layout_height="45dp"
        android:text="Email:"
        android:textColor="@android:color/white"
        android:textSize="35dp"
        app:layout_constraintBottom_toTopOf="@+id/ac_tv_pword"
        app:layout_constraintTop_toBottomOf="@+id/ac_tv_username"
        app:layout_constraintRight_toRightOf="@+id/ac_tv_username" />

    <TextView
        android:id="@+id/ac_tv_username"
        android:layout_width="175dp"
        android:layout_height="45dp"
        android:text="Username:"
        android:textColor="@android:color/white"
        android:textSize="35dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.177"
        app:layout_constraintBottom_toTopOf="@+id/ac_tv_email"
        app:layout_constraintTop_toBottomOf="@+id/ac_pleasecomplete" />

    <EditText
        android:id="@+id/ac_tx_uname"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:textColorHint="@android:color/white"
         android:backgroundTint="@android:color/white"
        android:ems="10"
        android:textColor="@android:color/white"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="266dp"
        app:layout_constraintBottom_toBottomOf="@+id/ac_tv_username"
        android:layout_marginEnd="332dp"
        android:layout_marginBottom="-5dp" />

    <TextView
        android:id="@+id/ac_pleasecomplete"
        android:layout_width="948dp"
        android:layout_height="48dp"
        android:text="Please complete the following information to create a user."
        android:textColor="@android:color/white"
        android:textSize="35dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="107dp" />

    <TextView
        android:id="@+id/ac_createuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CREATE USER"
        android:textColor="@android:color/white"
        android:textSize="45dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline5"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="20dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline12"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="20dp"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline13"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="20dp"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline14"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="20dp"
        tools:layout_editor_absoluteX="0dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline15"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="20dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline16"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="20dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline17"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="20dp"
        tools:layout_editor_absoluteX="0dp" />

</android.support.constraint.ConstraintLayout>