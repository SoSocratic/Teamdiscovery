<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_plain"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/sg2_home"
        android:layout_width="54dp"
        android:layout_height="59dp"
        android:adjustViewBounds="false"
        android:background="@drawable/home"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cg2_dog"
        android:layout_width="289dp"
        android:layout_height="278dp"
        app:srcCompat="@drawable/dog"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.141"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        android:layout_marginEnd="16dp" />

    <ImageView
        android:id="@+id/sg2_d"
        android:layout_width="171dp"
        android:layout_height="153dp"
        app:srcCompat="@drawable/d"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp"
        app:layout_constraintRight_toLeftOf="@+id/sg2_g"
        app:layout_constraintLeft_toRightOf="@+id/sg2_o" />
    <ImageView
        android:id="@+id/sg2_o"
        android:layout_width="171dp"
        android:layout_height="153dp"
        app:srcCompat="@drawable/o"
        android:layout_marginLeft="197dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="197dp" />

    <ImageView
        android:id="@+id/sg2_g"
        android:layout_width="171dp"
        android:layout_height="153dp"
        app:srcCompat="@drawable/g"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="210dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="210dp" />

    <ImageView
        android:id="@+id/sg2_bw_d"
        android:layout_width="171dp"
        android:layout_height="153dp"
        app:srcCompat="@drawable/bw_d"
        android:layout_marginLeft="197dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="197dp"
        app:layout_constraintBottom_toTopOf="@+id/sg2_o"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.951" />
    <ImageView
        android:id="@+id/sg2_bw_o"
        android:layout_width="171dp"
        android:layout_height="153dp"
        app:srcCompat="@drawable/bw_o"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/sg2_bw_d" />

    <ImageView
        android:id="@+id/sg2_bw_g"
        android:layout_width="171dp"
        android:layout_height="153dp"
        app:srcCompat="@drawable/bw_g"
        android:layout_marginRight="210dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="210dp"
        app:layout_constraintTop_toTopOf="@+id/sg2_bw_o" />

    <ImageView
        android:id="@+id/sg2_prg2"
        android:layout_width="227dp"
        android:layout_height="33dp"
        app:srcCompat="@drawable/prg_2of5"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="34dp"
        app:layout_constraintRight_toRightOf="@+id/sg2_tv_prg2" />

    <TextView
        android:id="@+id/sg2_tv_prg2"
        android:layout_width="222dp"
        android:layout_height="27dp"
        android:text="2 out of 5 until next level"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/sg2_prg2"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginEnd="16dp" />

</android.support.constraint.ConstraintLayout>