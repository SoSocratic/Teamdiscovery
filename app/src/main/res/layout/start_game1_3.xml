<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_plain"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/sg3_home"
        android:layout_width="54dp"
        android:layout_height="59dp"
        android:adjustViewBounds="false"
        android:background="@drawable/home"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cg3_pig"
        android:layout_width="289dp"
        android:layout_height="278dp"
        app:srcCompat="@drawable/pig"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.141"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        android:layout_marginEnd="16dp" />

    <ImageView
        android:id="@+id/sg3_p"
        android:layout_width="171dp"
        android:layout_height="153dp"
        app:srcCompat="@drawable/p"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp"
        app:layout_constraintRight_toLeftOf="@+id/sg3_g"
        app:layout_constraintLeft_toRightOf="@+id/sg3_i" />
    <ImageView
        android:id="@+id/sg3_i"
        android:layout_width="171dp"
        android:layout_height="153dp"
        app:srcCompat="@drawable/i"
        android:layout_marginLeft="197dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="197dp" />

    <ImageView
        android:id="@+id/sg3_g"
        android:layout_width="171dp"
        android:layout_height="153dp"
        app:srcCompat="@drawable/g"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="210dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="210dp" />

    <ImageView
        android:id="@+id/sg3_bw_p"
        android:layout_width="171dp"
        android:layout_height="153dp"
        app:srcCompat="@drawable/bw_p"
        android:layout_marginLeft="197dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="197dp"
        app:layout_constraintBottom_toTopOf="@+id/sg3_i"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.951" />
    <ImageView
        android:id="@+id/sg3_bw_i"
        android:layout_width="171dp"
        android:layout_height="153dp"
        app:srcCompat="@drawable/bw_i"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/sg3_bw_p" />

    <ImageView
        android:id="@+id/sg3_bw_g"
        android:layout_width="171dp"
        android:layout_height="153dp"
        app:srcCompat="@drawable/bw_g"
        android:layout_marginRight="210dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="210dp"
        app:layout_constraintTop_toTopOf="@+id/sg3_bw_i" />

    <ImageView
        android:id="@+id/sg3_prg3"
        android:layout_width="227dp"
        android:layout_height="33dp"
        app:srcCompat="@drawable/prg_3of5"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="34dp"
        app:layout_constraintRight_toRightOf="@+id/sg3_tv_prg3" />

    <TextView
        android:id="@+id/sg3_tv_prg3"
        android:layout_width="222dp"
        android:layout_height="27dp"
        android:text="3 out of 5 until next level"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/sg3_prg3"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginEnd="16dp" />

</android.support.constraint.ConstraintLayout>