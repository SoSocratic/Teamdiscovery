<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="86dp"
        android:layout_height="47dp"
        android:text="Username"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="235dp"
        tools:layout_editor_absoluteY="153dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="86dp"
        android:layout_height="43dp"
        android:text="Password"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="235dp"
        tools:layout_editor_absoluteY="224dp" />

    <EditText
        android:id="@+id/edit_text_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Username Here"
        tools:layout_editor_absoluteX="373dp"
        tools:layout_editor_absoluteY="153dp" />

    <EditText
        android:id="@+id/edit_text_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="373dp"
        tools:layout_editor_absoluteY="224dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="435dp"
        android:layout_height="31dp"
        android:text="Please enter your username and password:"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="45dp" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_preferences"
        tools:layout_editor_absoluteX="888dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/loginpage_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        tools:layout_editor_absoluteX="433dp"
        tools:layout_editor_absoluteY="302dp" />

    <Button
        android:id="@+id/create_new_user_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="createUser"
        android:text="Create New User"
        tools:layout_editor_absoluteX="402dp"
        tools:layout_editor_absoluteY="370dp" />

</android.support.constraint.ConstraintLayout>