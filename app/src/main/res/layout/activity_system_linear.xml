<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"


    android:weightSum="1"
    android:baselineAligned="false"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/settings_button"
        android:layout_width="54dp"
        android:layout_height="59dp"
        android:adjustViewBounds="false"
        android:layout_marginRight="39dp"
        android:padding="0dp"
        android:background="@android:color/transparent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="39dp" />

    <ImageView
        android:id="@+id/logo_view"
        android:layout_width="785dp"
        android:layout_height="219dp"
        tools:ignore="ContentDescription"
        app:layout_constraintBottom_toTopOf="@+id/as_llrp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.507" />

    <ImageView
        android:id="@+id/title_view"
        android:layout_width="536dp"
        android:layout_height="76dp"
        tools:ignore="ContentDescription"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="362dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/as_llrp"
        android:layout_width="542dp"
        android:layout_height="89dp"
        android:layout_marginBottom="61dp"
        app:layout_constraintBottom_toTopOf="@+id/login_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="ContentDescription"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <ImageButton
        android:id="@+id/login_button"
        android:layout_width="321dp"
        android:layout_height="95dp"
        android:layout_marginBottom="23dp"
        android:onClick="startLogin"
        android:padding="0dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/createuser_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/createuser_button"
        app:layout_constraintRight_toRightOf="@+id/createuser_button"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <ImageButton
        android:id="@+id/createuser_button"
        android:layout_width="321dp"
        android:layout_height="93dp"
        android:layout_marginTop="541dp"
        android:onClick="createUser"
        android:orientation="horizontal"
        android:padding="0dp"
        android:background="@android:color/transparent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="55dp"
        android:layout_height="52dp"
        android:padding="0dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="38dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="38dp"  />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="20dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="20dp"
        tools:layout_editor_absoluteX="0dp" />


</android.support.constraint.ConstraintLayout>
