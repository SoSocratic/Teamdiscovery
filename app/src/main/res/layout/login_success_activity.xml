<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_plain">

    <Button
        android:id="@+id/cc_add_child"
        android:layout_width="340dp"
        android:layout_height="83dp"
        android:background="@drawable/cc_addnew"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.206"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="109dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/cc_ok"
        android:layout_width="340dp"
        android:layout_height="83dp"
        android:background="@drawable/cc_ok"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.83"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/cc_logout"
        android:layout_width="173dp"
        android:layout_height="55dp"
        android:background="@drawable/cc_logout"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.896"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.987"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/cc_tv_welcome"
        android:layout_width="203dp"
        android:layout_height="55dp"
        android:text="Welcome,"
        android:textColor="@android:color/white"
        android:textSize="45dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="46dp"
        app:layout_constraintHorizontal_bias="0.097"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/cc_tv_admin_name"
        android:layout_width="321dp"
        android:layout_height="55dp"
        android:text="admin name"
        android:textColor="@android:color/white"
        android:textSize="45dp"
        app:layout_constraintHorizontal_bias="0.405"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/cc_tv_welcome"
        android:layout_marginBottom="-9dp" />

    <TextView
        android:id="@+id/cc_tv_choose"
        android:layout_width="493dp"
        android:layout_height="51dp"
        android:text="Please choose Child's profile:"
        android:textColor="@android:color/white"
        android:textSize="35dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="133dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="133dp" />

    <ImageButton
        android:id="@+id/cc_info"
        android:layout_width="55dp"
        android:layout_height="52dp"
        app:srcCompat="@android:drawable/ic_menu_info_details"
        android:background="@drawable/about"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="38dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="38dp"/>

    <ImageButton
        android:id="@+id/cc_sett"
        android:layout_width="54dp"
        android:layout_height="59dp"
        android:adjustViewBounds="false"
        android:background="@drawable/settings"
        android:layout_marginRight="39dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="39dp"  />

<!-- This is where the list of children goes using the xml:https://www.youtube.com/watch?v=_yaP4etGKlU-->

    <!-- This will change depending who's the selected child: https://www.youtube.com/watch?v=i-q3Pc8BdOI -->
    <ImageView
        android:id="@+id/cc_child_avtr"
        android:layout_width="266dp"
        android:layout_height="266dp"
        app:srcCompat="@drawable/boy"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/cc_radio_child"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="238dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline18"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="horizontal" />

    <RadioGroup
        android:id="@+id/cc_radio_child"
        android:layout_width="694dp"
        android:layout_height="266dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="176dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.951"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.061" />

</android.support.constraint.ConstraintLayout>