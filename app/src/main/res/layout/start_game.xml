<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_plain"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/sg_picture"
        android:layout_width="289dp"
        android:layout_height="278dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.141"
        app:srcCompat="@drawable/cat" />

    <ImageView
        android:id="@+id/choice_1"
        android:layout_width="171dp"
        android:layout_height="153dp"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="100dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/choice_2"
        android:layout_width="171dp"
        android:layout_height="153dp"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="24dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/choice_1" />

    <ImageView
        android:id="@+id/choice_3"
        android:layout_width="171dp"
        android:layout_height="153dp"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="24dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/choice_2" />

    <ImageView
        android:id="@+id/choice_4"
        android:layout_width="171dp"
        android:layout_height="153dp"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="24dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/choice_3" />

    <ImageView
        android:id="@+id/choice_5"
        android:layout_width="171dp"
        android:layout_height="153dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="0dp"
        android:adjustViewBounds="false"
        android:visibility="visible"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/choice_4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="35dp" />

    <ImageView
        android:id="@+id/option_1"
        android:layout_width="171dp"
        android:layout_height="153dp"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/option_3"
        android:layout_marginRight="8dp" />

    <ImageView
        android:id="@+id/option_2"
        android:layout_width="171dp"
        android:layout_height="153dp"
        android:visibility="visible"
        tools:layout_editor_absoluteX="32dp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@+id/option_1"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/choice_1" />

    <ImageView
        android:id="@+id/option_3"
        android:layout_width="171dp"
        android:layout_height="153dp"
        android:visibility="visible"
        android:layout_marginTop="-1dp"
        app:layout_constraintTop_toBottomOf="@+id/sg_picture"
        app:layout_constraintLeft_toRightOf="@+id/option_2"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/choice_3"
        app:layout_constraintVertical_bias="0.502"
        app:layout_constraintRight_toLeftOf="@+id/option_5"
        android:layout_marginRight="8dp" />

    <ImageView
        android:id="@+id/option_4"
        android:layout_width="171dp"
        android:layout_height="153dp"
        android:layout_marginEnd="210dp"
        android:visibility="visible"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/option_5"
        android:layout_marginRight="210dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/option_3"
        android:layout_marginLeft="8dp" />

    <ImageView
        android:id="@+id/option_5"
        android:layout_width="171dp"
        android:layout_height="153dp"
        android:layout_marginEnd="210dp"
        android:visibility="visible"
        android:layout_marginTop="204dp"
        app:layout_constraintTop_toBottomOf="@+id/sg_prg1"
        android:layout_marginRight="80dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/sg_prg1"
        android:layout_width="227dp"
        android:layout_height="33dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="26dp"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>