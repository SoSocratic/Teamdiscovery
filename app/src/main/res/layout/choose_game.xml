<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_plain"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/cg_tv_child_name"
        android:layout_width="464dp"
        android:layout_height="51dp"
        android:text="Dynamic - Child's name"
        android:textColor="@android:color/white"
        android:textSize="35dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="59dp"
        android:layout_marginLeft="126dp"
        app:layout_constraintLeft_toLeftOf="@+id/cg_iv_avatr"
        android:layout_marginStart="126dp" />

    <TextView
        android:id="@+id/cg_tv_confprofile"
        android:layout_width="279dp"
        android:layout_height="50dp"
        android:text="Configure Profile"
        android:textColor="@android:color/white"
        android:textSize="35dp"
        app:layout_constraintLeft_toLeftOf="@+id/cg_tv_child_name"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="110dp" />

    <ImageButton
        android:id="@+id/cg_start_game"
        android:layout_width="340dp"
        android:layout_height="83dp"
        android:background="@android:color/transparent"
        android:padding="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintVertical_bias="0.887"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="369dp"
        android:layout_height="48dp"
        android:text="Please choose a game:"
        android:textColor="@android:color/white"
        android:textSize="35dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="184dp"
        android:layout_marginLeft="115dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="115dp" />

<!-- will be changing depending on who's child profile is selected -->
    <ImageView
        android:id="@+id/cg_iv_avatr"
        android:layout_width="126dp"
        android:layout_height="134dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="38dp"
        android:layout_marginLeft="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="50dp" />

    <ImageButton
        android:id="@+id/ac_info"
        android:layout_width="55dp"
        android:layout_height="52dp"
        android:background="@android:color/transparent"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="38dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="38dp" />


    <ImageButton
        android:id="@+id/ac_sett"
        android:layout_width="54dp"
        android:layout_height="59dp"
        android:adjustViewBounds="false"
        android:background="@android:color/transparent"
        android:padding="0dp"
        android:layout_marginRight="39dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="39dp" />

    <ImageButton
        android:id="@+id/cg_level1"
        android:layout_width="280dp"
        android:layout_height="230dp"
        android:background="@android:color/transparent"
        android:padding="0dp"
        app:layout_constraintBottom_toTopOf="@+id/cg_start_game"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.266"
        app:layout_constraintVertical_bias="0.413" />

    <ImageButton
        android:id="@+id/cg_level2"
        android:layout_width="293dp"
        android:layout_height="233dp"
        android:background="@android:color/transparent"
        android:padding="0dp"
        app:layout_constraintBottom_toTopOf="@+id/cg_start_game"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.758"
        app:layout_constraintVertical_bias="0.42" />

</android.support.constraint.ConstraintLayout>